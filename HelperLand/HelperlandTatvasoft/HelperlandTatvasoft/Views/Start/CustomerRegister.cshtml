@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

    <link rel="stylesheet" href="~/css/faq.css?v=101">

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@500&display=swap" rel="stylesheet">

    <script src="https://kit.fontawesome.com/5602f8a8c9.js" crossorigin="anonymous"></script>
</head>

<body>

    <!-- Header start-->

    <header class="header">
        <nav class="navbar navbar-expand-lg">
            <a class="navbar-brand" asp-controller="Start" asp-action="Index">
                <img src="~/img/white-logo-transparent-background.png" alt=""
                     class="main-logo ms-2" width="73px" height="54px">
            </a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
                    aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <i class="fas fa-bars"></i>
            </button>

            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav ms-auto me-2">
                    <li class="nav-item px-3">
                        <a class="nav-link border border-1 rounded-pill px-3" href="#"
                           style="background-color: #29626D;">Book now</span></a>
                    </li>
                    <li class="nav-item px-3">
                        <a class="nav-link" asp-controller="Start" asp-action="Prices">Prices and services</a>
                    </li>
                    <li class="nav-item px-3">
                        <a class="nav-link" href="#">Warranty</a>
                    </li>
                    <li class="nav-item px-3">
                        <a class="nav-link" href="#">Blog</a>
                    </li>
                    <li class="nav-item px-3">
                        <a class="nav-link" asp-controller="Start" asp-action="Contact">Contact</a>
                    </li>
                    <li class="nav-item px-3">
                        <a class="nav-link border border-1 rounded-pill px-3"
                           style="background-color: #29626D;" asp-controller="Start" asp-action="Index">Login</a>
                    </li>
                    <li class="nav-item px-3">
                        <a class="nav-link border border-1 rounded-pill px-3" href="#"
                           style="background-color: #29626D;">Become a helper</a>
                    </li>
                </ul>
            </div>
        </nav>
    </header>

    <!-- Header end-->

    <main>

        <section class="my-4">
            <p class="text-center mb-1" style="font-size: 36px; color: #4F4F4F;"><b>Create an account</b></p>
            <div class="d-flex justify-content-center mb-2">
                <div class="me-1">
                    <hr style="width: 50px;">
                </div>
                <div class="text-center ms-2;" style="margin-top: 4px;">
                    <img src="~/img/forma-1-copy-5.png" alt="">
                </div>
                <div class="ms-1">
                    <hr style="width: 50px;">
                </div>
            </div>
        </section>

        <div class="container mt-4">
            <form method="post" asp-controller="Start" asp-action="CustomerAdd">
                <div class="row justify-content-center">
                    <div class="col-md-4">
                        <input type="text" class="form-control" id="firstName" asp-for="FirstName" placeholder="First name" style="height:46px;margin-bottom: 15px;">
                        <span class="text-danger" asp-validation-for="FirstName"></span>
                    </div>
                    <div class="col-md-4">
                        <input type="text" class="form-control" id="lastName" asp-for="LastName" placeholder="Last name" style="height:46px;margin-bottom: 15px;">
                        <span class="text-danger" asp-validation-for="LastName"></span>
                    </div>
                </div>
                <div class="row justify-content-center">
                    <div class="col-md-4">
                        <input type="email" class="form-control" id="email" placeholder="Email" asp-for="Email" style="height:46px;margin-bottom: 15px;">
                        <span class="text-danger" asp-validation-for="Email"></span>
                    </div>
                    <div class="col-md-4">
                        <div class="input-group" style="height:46px;margin-bottom: 15px;">
                            <span class="input-group-text" style="height:46px;" id="basic-addon1">+49</span>
                            <input type="phone" class="form-control" id="phone" placeholder="Mobile number" asp-for="Mobile"><br>
                            <span class="text-danger" asp-validation-for="Mobile"></span>
                        </div>

                    </div>

                </div>
                <div class="row justify-content-center">
                    <div class="col-md-4">
                        <input type="password" class="form-control" id="password" placeholder="Password" asp-for="Password" style="height:46px;margin-bottom: 15px;">
                        <span class="text-danger" asp-validation-for="Password"></span>
                    </div>
                    <div class="col-md-4">
                        <div class="input-group" style="height:46px;margin-bottom: 15px;">
                            <input type="password" class="form-control" id="cpassword" placeholder="Confirm Password"><br>
                            <span class="text-danger" asp-validation-for="Password"></span>
                        </div>

                    </div>

                </div>

                <div class="form_btn w-100 mt-3 d-flex align-items-center justify-content-center mb-3">
                    <button type="submit" class="btn submit_btn rounded-pill text-white mb-4 mb-4">
                        Register
                    </button>
                </div>
            </form>
            <div class="d-flex justify-content-center">
                <span class="mt-1"> Already registered? <a asp-controller="Start" asp-action="Index" style="text-decoration:none"> Login now </a></span>
            </div>

        </div>
        <h3>@ViewBag.Error</h3>
    </main>
    <!-- footer starts -->
    <footer style="background-color: #111111;">

        <div class="container d-flex justify-content-between align-items-center py-3">
            <!-- logo starts -->
            <div>
                <img width="100px" src="~/img/white-logo-transparent-background.png" alt="">
            </div>
            <!-- logo ends -->
            <!-- links starts -->
            <div class="d-flex flex-wrap text-center justify-content-center" style="color: white;">
                <a class="px-3" asp-controller="Start" asp-action="Index">HOME</a>
                <a class="px-3" asp-controller="Start" asp-action="about">ABOUT</a>
                <a class="px-3" href="#testimonials">TESTIMONIALS</a>
                <a class="px-3" asp-controller="Start" asp-action="faq">FAQS</a>
                <a class="px-3" href="#">INSURRANCE POLICY</a>
                <a class="px-3" href="#">IMPRESSUM</a>
            </div>
            <!-- links ends -->
            <!-- fb insta starts -->
            <div>
                <a class="px-2" href="#"><i style="color: white;" class="fab fa-facebook-f"></i></a>

                <a class="px-2" href="#"><i style="color: white;" class="fab fa-instagram"></i></a>
            </div>
            <!-- fb insta ends -->
        </div>

        <!-- privacy policy starts -->
        <div class="text-center mb-0 py-2" style="position:relative; color:white; background-color: #292929;">
            <p class="mb-0 py-2 d-inline" style="font-size: 14px; color: #9BA0A3;">
                ©2018 Helperland. All rights reserved. Terms and Conditions | Privacy Policy
            </p>
        </div>
        <!-- privacy policy ends -->

    </footer>
    <!-- footer ends -->
    <!-- scripts -->
    <script>

        let mybutton = document.getElementById("btn-back-to-top");

        // When the user scrolls down 20px from the top of the document, show the button
        window.onscroll = function () {
            scrollFunction();
        };

        function scrollFunction() {
            if (
                document.body.scrollTop > 20 ||
                document.documentElement.scrollTop > 20
            ) {
                mybutton.style.display = "block";
            } else {
                mybutton.style.display = "none";
            }
        }
        // When the user clicks on the button, scroll to the top of the document
        mybutton.addEventListener("click", backToTop);

        function backToTop() {
            document.body.scrollTop = 0;
            document.documentElement.scrollTop = 0;
        }

    </script>
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>

</body>

</html>