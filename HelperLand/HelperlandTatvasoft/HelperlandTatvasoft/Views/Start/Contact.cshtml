        <div class="container-fluid">
            <h4 class="text-center get-in-touch"><b>Get in touch with us</b></h4>
            <div class="container mt-4">
                <form method="post" asp-controller="Start" asp-action="ContactAdd">
                    <div class="row justify-content-center">
                        <div class="col-md-4">
                            <input type="text" class="form-control" asp-for="Fname" id="firstName" placeholder="First name" style="height:46px;margin-bottom: 15px;">
                            <span asp-validation-for="Fname" class="text-danger"></span>
