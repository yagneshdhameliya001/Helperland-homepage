<body>

    <form asp-controller="Start" asp-action="NewPassword" method="post">
        <label class="mx-5">Email</label>
        <input type="text" placeholder="Email" asp-for="Email" class="mx-5"/>

        <br />
        <br />
        <label class="mx-5">New Password</label>
        <input type="text" placeholder="New Password" asp-for="Password" id="NewPassword" class="mx-5">

        <br />
        <br />
        <label class="mx-5">Confirm New Password</label>
        <input type="text" placeholder="Confirm New Password" asp-for="Password" id="ConfirmNewPassword" class="mx-5">

        <button type="submit" class="login-button rounded-pill" id="login">Save</button>
    </form>

</body>
